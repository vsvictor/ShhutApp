<?xml version="1.0" encoding="utf-8"?>
<com.shhutapp.controls.ExLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llAddContactSelector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlWhiteListAddContactList"
        android:layout_marginTop="@dimen/white_list_contact_added_top">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:transcriptMode="alwaysScroll"
            android:id="@+id/lvAddContactList"
            android:divider="@null"
            android:scrollbarStyle="outsideInset"
            android:fastScrollAlwaysVisible="true"
            android:fastScrollEnabled="true" />
    </RelativeLayout>

</com.shhutapp.controls.ExLinearLayout>