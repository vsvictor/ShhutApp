                    android:layout_centerInParent="true"
                    android:src="@drawable/circle_on_help_gray"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="27dp"
                android:layout_height="27dp">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/circle_on_help_gray"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="27dp"
                android:layout_height="27dp">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/circle_on_help_gray"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="27dp"
                android:layout_height="27dp">
