        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/queittime_one_day_width"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/rlDay6"
            android:id="@+id/rlDay7"
            android:background="@drawable/rect_days_blue_last">
            <ImageView
                android:id="@+id/ivCircle7"
