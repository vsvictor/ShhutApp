<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/queittime_control_height"
    android:background="@color/blue_body"
    android:id="@+id/rlQueitTimeDays">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/queittime_days_names_height"
        android:id="@+id/rlDaysNames"
        android:layout_marginLeft="@dimen/queittime_days_names_left"
        android:layout_marginTop="@dimen/queittime_days_top"
        android:layout_marginBottom="@dimen/queittime_days_bottom"
        android:layout_marginRight="@dimen/queittime_days_names_right"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="@dimen/queittime_0_day_width"
            android:layout_height="match_parent"
            android:id="@+id/rlDay0"
            android:background="@color/blue_action_bar">
            <ImageView
                android:id="@+id/ivCircle0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_white"
                android:visibility="invisible" />
            <ImageView
                android:id="@+id/ivRecFirst0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rect_days_white_first"
                android:visibility="invisible" />
            <ImageView
                android:id="@+id/ivRecLast0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rect_days_white_last"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivRec0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/rect_days_white"
                android:visibility="invisible" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/queittime_one_day_width"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/rlDay0"
            android:id="@+id/rlDay1"
            android:background="@drawable/rect_days_blue">
            <ImageView
                android:id="@+id/ivCircle1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_white"
                android:visibility="invisible"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/ivRecFirst1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rect_days_white_first"
                android:visibility="invisible"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/ivRecLast1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rect_days_white_last"
                android:visibility="invisible"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/ivRec1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rect_days_white"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/tvDay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:text="@string/sun"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/queittime_one_day_width"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/rlDay1"
            android:id="@+id/rlDay2"
            android:background="@drawable/rect_days_blue">
