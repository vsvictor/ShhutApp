                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/queittime_days_begin_width"
        android:layout_height="@dimen/queittime_days_begin_height"
        android:id="@+id/rlDaysBegin"
        android:layout_marginLeft="@dimen/queittime_days_begin_left"
        android:layout_marginTop="@dimen/queittime_days_top"
        android:layout_marginBottom="@dimen/queittime_days_bottom"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ivDaysBegin"
            android:src="@drawable/days_on"
            android:scaleType="fitXY" />
